<section>
    <div class="container mt-5 col-md-12">



        <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-2">

            {{!-- <a href="/admin/add-products"><button class="btn btn-color text-white" type="button">Add
                    product</button></a> --}}
        </div>


        <table class='table display' id="User_Table">
            <thead>
                <tr>

                    <th scope=" col">Name</th>
                    <th scope=" col">EmailId</th>
                    <th scope=" col">Address</th>
                    <th scope=" col">PhoneNo</th>
                    <th scope=" col">Options</th>
                    {{!-- <th scope=" col">Category Name</th>
                    <th scope=" col">Image</th> --}}


                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>

                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.address}}</td>
                    <td>{{this.number}}</td>
                    {{!-- <td>{{this.categoryname}}</td>
                    <td><img style="width: 50px; height:50px" src="/images/{{this.allImages.[0].maini}}" alt=""></td>
                    --}}

                    <td>
                        {{!-- <a href="/admin/edit_product/{{this._id}}" class="btn "><i class='bx bxs-edit-alt'></i>
                        </a> --}}
                        {{!-- <a href="/admin/userdelete/{{this._id}}" class="btn "
                            onclick="return confirm(' are you want to delete {{this.name}}?')"><i
                                class='bx bxs-trash'></i>
                        </a> --}}
                        <div id="refresh" onClick="refreshPage()">
                            <!-- <button type="button" onClick="refreshPage()">Close</button> -->

                            {{#if block}}
                            <a onclick="unBlockUser('{{this._id}}')" class="btn btn-danger active" role="button"
                                data-bs-toggle="button" aria-pressed="true"><i class='bx bx-block'></i></a></a>
                            {{!-- <a href="/admin/UnBlockuser/{{this._id}}" class="btn btn-primary">UnBlock</a>
                            --}}
                            {{else}}
                            <a onclick="blockUser('{{this._id}}')" class="btn btn-success" role="button"
                                data-bs-toggle="button">
                                <i class='bx bx-block'></i></a>
                            {{!-- <a href="/admin/Blockuser/{{this._id}}" class="btn btn-danger ">Block</a> --}}
                            {{/if}}
                        </div>

                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>

    </div>
</section>
<script>
    function refreshPage() {
        window.location.reload();
    } 
</script>

