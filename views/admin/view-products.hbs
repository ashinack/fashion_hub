
<section>
    <div class="container mt-5 col-md-12">



        <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-2">

            <a href="/admin/add-products"><button class="btn btn-color text-white" type="button">Add
                    product</button></a>
        </div>


        <table class='table display' id="User_Table">
            <thead>
                <tr>
                    <th scope=" col">No</th>
                    <th scope=" col">Brand Name</th>
                    <th scope=" col">Price</th>
                    <th scope=" col">Description</th>
                    {{!-- <th scope=" col">Size</th> --}}
                    <th scope=" col">SubCategory</th>

                    <th scope=" col">Image1</th>
                    {{!-- <th scope=" col">Image2</th> --}}
                    <th scope=" col">Quantity</th>



                </tr>
            </thead>
            <tbody>
                {{#each product_detail}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.brandnames.brandname}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.description}}</td>
                    {{!-- <td>{{this.size}}</td> --}}


                    <td>{{this.subcategoryname.subcategoryname}}</td>

                    <td><img style="width: 50px; height:50px" src="/images/{{this.allImages.[0].maini}}" alt=""></td>
                    {{!-- <td><img style="width: 50px; height:50px" src="/images/{{this.allImages.[0].nexti}}" alt="">
                    </td> --}}
                    <td>{{this.quantity}}</td>


                    <td>
                        <a href="/admin/edit_product/{{this._id}}" class="btn "><i class='bx bxs-edit-alt'></i>
                        </a>
                        <a href="/admin/delete/{{this._id}}" class="btn"
                            onclick="return confirm(' are you want to delete {{this.name}}?')"><i
                                class='bx bxs-trash'></i>
                        </a>

                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>

    </div>
</section>

