<section>



    <div class="container mt-5">

        <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-2">

            <a href="/admin/add-brand"><button class="btn btn-color text-white" type="button">Add
                    Brands</button></a>
        </div>



        <table class='table display' id="User_Table">
            <thead>
                <tr>
                    <th scope=" col">Brand Name</th>
                    {{!-- <th scope=" col">Category Name</th> --}}




                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>

                    <td>{{this.brandname}}</td>
                    {{!-- <td>{{this.category.categoryname}}</td> --}}


                    <td>
                        {{!-- <a href="/admin/edit_product/{{this._id}}" class="btn "><i class='bx bxs-edit-alt'></i>
                        </a> --}}
                        <a href="/admin/delete-brand/{{this._id}}" class="btn "
                            onclick="return confirm(' are you want to delete {{this.name}}?')"><i
                                class='bx bxs-trash'></i>
                        </a>

                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>

    </div>

</section>