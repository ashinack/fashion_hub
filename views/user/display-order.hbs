<section>
    <div class="container mt-5 col-md-12">



        


        <table class='table display' id="User_Table">
            <thead>
                <tr>
                    
                    <th scope="col">Date</th>
                    <th scope="col">Address</th>
                    {{!-- <th scope="col">Status</th> --}}
                    <th scope="col">Payment</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Products</th>
                    <th scope="col">OrderStatus</th>
                    <th scope="col">option</th>
                    
                    




                </tr>
            </thead>
            <tbody>
               
                {{#each orders}}
               
                
                <tr>
                    
                    <td><span style="font-size:small">{{this.OrderPlacedAt}}</span></td>
                    <td><span style="font-size:small">{{this.address}},{{this.pincode}},{{this.Place}}</span></td>
                    {{!-- <td><span style="font-size:x-small">{{this.status}}</span></td> --}}
                    <td><span style="font-size:small">{{this.paymentMethod}}</span></td>
                    <td><span style="font-size:small">{{this.mobile_no}}</span></td>
                    <td><span style="font-size:small">{{this.totalAmount}}</span></td>
                    <td><span style="font-size:small"><a href="/view-orderproducts/{{this._id}}" class="btn btn-color text-white">viewproducts
                            </a></span>
                        {{!-- {{#each this.productdt}}
                        <img style="width: 50px; height:50px" src="/images/{{this.allImages.[0].maini}}" alt="">
                        {{/each}} --}}
                            </td>
                    
                    
                    <td><span style="font-size:small">{{this.orderstatus}}</span></td>
                    {{#if cancel}}
                   
                      <td><p class="text-danger">cancelled</p></td>  
                    {{else}}  
                    <td><span style="font-size:small"><a href="/cancel-order/{{this._id}}" class="btn btn-color text-white">cancel
                            </a></span>
                    {{/if}}

{{/each}}
                
                   
                   
                   
                   

                </tr>
            </tbody>
        </table>

    </div>
</section>